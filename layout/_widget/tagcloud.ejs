<% if (site.tags.length){ %>
	<div class="widget-wrap">
		<h3 class="widget-title"><%= __('tagcloud') %></h3>
		<div class="widget tagcloud">
		<%- tagcloud({
				min_font: 1,
				max_font: 1.2,
				unit: 'em',
				orderby: 'count',
				color: true,
				start_color: '#b8abab',
				end_color: '#7d7d7e'
		}) %>
		</div>
	</div>
<% } %>