@import "./reset.styl"
@import "./varible.styl"
vendor(prop,args)
	-webkit-{prop} args
	-moz-{prop} args
	{prop} args


.bg_content
	position:fixed
	top:0
	z-index: -1
	width:100%
	height:100%
#canvas
	width:100%
	height:100%

#header
	width:100%
	display:flex
	align-items: center
#content
	display:flex
	align-items:flex-start
#content-left
	flex: 1
	box-shadow: 10px 10px 5px #888888
	margin-left: 2em
	margin-top: 2em
	background-color: $color-background
#content-right
	flex:4
	margin-left: 6em
	margin-right: 6em
#header-left
	margin-left:2em
	order: 1
	flex: 2
#header-title a
	color: $color-a
	text-decoration: none
#header-title a:hover
	text-decoration: none
	color: $color-a-hover
#header-right
	order: 2
	flex:1
#header-right a
	margin-left: 2em
	color: $color-a
	text-decoration: none
	vendor(transition,background-color 0.3 ease)
#header-right a:hover
	color: $color-a-hover
	background-color: $color-background-d
#header-title a 
	font-size: 20px
	vendor(transition, font-size 0.5s ease-in-out)
#header-title a:hover
	font-size 25px

.widget-wrap
	margin-top: 1em
.widget-title
	color: $color-widget-title
			
.widget ul
	list-style: none
	padding: 0
.widget ul li
	border-bottom: 1px solid #000
	padding-top: 1em
	//margin-left:1em
	
.widget ul li a
	color: $color-a
	text-decoration: none
.widget ul li:hover
	text-decoration: none
	background-color: $color-background-d
	cursor:pointer
// .widget ul li span:before
// 	content: '(' 
// .widget ul li span:after
// 	content: ')'
 .widget ul li span
	color: $color-a
	float: right
.tagcloud
	margin-top: 0.5em	
.tagcloud a
	text-decoration none
.tagcloud a :hover
	background-color: $color-background-d

.index-article
	background-color:$color-background
	margin-top: 2em
	box-shadow: 10px 10px 5px #888888
.article-meta 
	color: $color-a
	margin-top:.1em
	margin-left: 1em
.article-inner
	margin-top:0.5em
	border-bottom: 1px solid #ffe
	padding-left: 1em
.article-header h1 a
	color:$color-article-title
	text-decoration: none
.article-header h1 a:hover
	color:$color-article-title-hover
.article-entry
	color: $color-text
.article-more-link a
	color: $color-a
	vendor(transition,background-color 0.3 ease)
	text-decoration: none
.article-more-link a:hover
	color: $color-a-hover
	background-color: $color-background-d
.article-category-link
	color: $color-category
	text-decoration: none
	margin-left: 1em
.article-category a:hover
	color: $color-category-hover
	
#page-nav
	display: flex
	justify-content: center
	margin-top: .5em
#page-nav .page-number,#page-nav .extend
	display:inline-block
	width:2em
	height:2em
	margin-left: 1em
	text-align: center
	line-height:30px
#page-nav .current
	background-color: $color-background

#page-nav a
	text-decoration:none
	color:$color-a
#page-nav a:hover
	color:$color-a-hover
	background-color: #fff

	