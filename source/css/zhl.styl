*
		margin: 0
		
vendor(prop,args)
	-webkit-{prop} args
	-moz-{prop} args
	{prop} args


.bg_content
	position:fixed;
	top:0;
	z-index: -1;
	width:100%;
	height:100%;
#canvas
	width:100%;
	height:100%;

#header
	width:100%;
	display:flex;
	align-items: center;
#content
	display:flex
	align-items:flex-start
#content-left
	flex: 1
	box-shadow: 10px 10px 5px #888888
	margin-left: 2em
	margin-top: 2em
	background-color:#444
#content-right
	flex:4
	margin-left: 2em
	margin-right: 2em
#header-left
	margin-left:2em;
	order: 1
	flex: 2
#header-title a
	color: #999;
	text-decoration: none;
#header-title a:hover
	text-decoration: none;
	color: #444;
#header-right
	order: 2
	flex:1
#header-right a
	margin-left: 2em;
	color: #999;
	text-decoration: none;
	vendor(transition,background-color 0.3 ease)
#header-right a:hover
	color: #ffe
	background-color: #1e1a1a
#header-title a 
	font-size: 20px
	vendor(transition, font-size 0.5s ease-in-out)
#header-title a:hover
	font-size 25px

.widget-wrap
	margin-top: 1em
.widget-title
	color: #994
			
.widget ul
	list-style: none
	padding: 0
.widget ul li
	border-bottom: 1px solid #000
	padding-top: 1em
	//margin-left:1em
	
.widget ul li a
	color: #999 
	text-decoration: none
.widget ul li:hover
	text-decoration: none
	background-color: #ffe
	cursor:pointer
// .widget ul li span:before
// 	content: '(' 
// .widget ul li span:after
// 	content: ')'
 .widget ul li span
	color: #999
	float: right
.tagcloud
	margin-top: 0.5em	
.tagcloud a
	text-decoration none
.tagcloud a :hover
	background-color: #1e1a1a

article
	background-color:#444
	margin-top: 2em
.article-meta 
	color: #999
	margin-top:.1em
	
.article-inner
	margin-top:0.5em
	border-bottom: 1px solid #ffe
.article-header h1 a
	color:#ffe
	text-decoration: none
.article-header h1 a:hover
	color:#999
.article-entry
	color: #ffe
.article-more-link a
	color: #998
	vendor(transition,background-color 0.3 ease)
	text-decoration: none
.article-more-link a:hover
	color: #ffe
	background-color: #1e1a1a
.article-category-link
	color: #994
	text-decoration: none
	margin-left:.5em
.article-category a:hover
	color: #994
